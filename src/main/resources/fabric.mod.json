{
  "schemaVersion": 1,
  "id": "profundis",
  "version": "${version}",

  "name": "Profundis",
  "description": "A world generation mod adding in five new underground biomes: the Frozen Caves, the Mushroom Caves, the Molten Caves, the Amethyst Caves, and the Black Caves. This mod can work on the server without clients needing to download a mod!",
  "authors": [
    "FireNH"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/profundis",
    "sources": "https://github.com/firenh/Profundis"
  },

  "license": "LGPL-3.0",
  "icon": "assets/profundis/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "fireopal.profundis.Profundis"
    ]
  },
  "mixins": [
    "profundis.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "~1.20.1",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
